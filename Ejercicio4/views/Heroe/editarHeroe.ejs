<h1>Editar Héroe  - <%= heroeAEditar.nombre %></h1>
<div class="row">
    <div class="col-sm-5">
        <form action="/Heroe/EditarHeroe" method="post">
            <div class="form-group">
                <label>Nombre:</label>
                <input type="text" class="form-control" placeholder="Ingrese el Nombre del Héroe" name="nombre" value="<%= heroeAEditar.nombre %>"> </div>
            <div class="form-group">
                <label>Castillo:</label>
                <input type="text" class="form-control" placeholder="Ingrese el Castillo" name="castillo" value="<%= heroeAEditar.castillo %>"> </div>
            <div class="form-group">
                <label>Nivel:</label>
                <input type="number" min="0" max="10" class="form-control" placeholder="Ingrese un nivel" name="nivel" value="<%= heroeAEditar.nivel %>">
                <input type="hidden" name="idHeroe" value="<%= heroeAEditar.id %>"> </div>
            <div class="form-group">
                <label for="">Poder</label>
                <select class="form-control" name="idPoder">
                    <% for(var i=0; i<poderes.length; i++){ %>
                        <option value='<%=poderes[i].id%>'>
                            <%=poderes[i].nombre%>
                        </option>
                        <%  } %>
                </select>
            </div>
            <button type="submit" class="btn btn-success btn-block">Editar Héroe :)</button>
        </form>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-5 text-center">
        <h2><%= heroeAEditar.nombre%></h2>
        <h4><%= heroeAEditar.castillo%></h4>
        <p>
            <%= heroeAEditar.nivel%>
        </p> <img width="150" height="150" src="<%= heroeAEditar.imagen %>" alt="heroe"> </div>
</div>