<div style='background-color:white;color:black;'>

  <h1>Editar Raza</h1>

  <div class="row">
    <div class="col-sm-8">
      <form action="raza/editarRaza" method="post">
        <div class="form-group">
          <label>Nombre</label>
          <input disabled type="text" class="form-control" placeholder="Nombre" name="nombre" value="<%= raza.nombre %>">
        </div>

        <div class="form-group">
          <label>Peso (en libras)</label>
          <input type="text" class="form-control" placeholder="Peso" name="peso" value="<%= raza.peso%>">
        </div>

        <input type="hidden" name="id" value="<%=raza.id%>">
        <button type="submit" class="btn btn-success">Editar Raza</button>

      </form>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center"> <%=raza.nombre%></h3>
      <h4 class="text-center"> Peso: <%=raza.peso%>libras</h4>

    </div>
  </div>


</div>
