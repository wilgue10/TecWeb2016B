<div style='background-color:white;color:black;'>

  <h1>Crea Razas</h1>

  <form action="raza/crearRaza" method="post">
    <div class="form-group">
      <label>Nombre</label>
      <input required type="text" class="form-control"  placeholder="Nombre" name="nombre">
    </div>
    <div class="form-group">
      <label>Peso promedio (en libras)</label>
      <input required type="number" min="3" class="form-control"  placeholder="Peso promedio" name="peso">
    </div>


    <button type="submit" class="btn btn-success">Crear Raza</button>
    <br>

  </form>
</div>
