<div style='background-color:white;color:black;'>

  <h1>Edita el Usuario</h1>
  <div class="row">
    <div class="col-sm-8">
      <form action="Usuario/EditarUsuarioForm" method="post">
        <div class="form-group">
          <label>Nombres</label>
          <input minlength=5 required type="text" class="form-control"  placeholder="Nombres" name="nombres"  value="<%= usuario.nombres %>">
        </div>
        <div class="form-group">
          <label>Apellidos</label>
          <input minlength=4 required type="text" class="form-control"  placeholder="Apellidos" name="apellidos" value="<%= usuario.apellidos %>">
        </div>
        <div class="form-group">
          <label>Correo</label>
          <input type="email" class="form-control"  placeholder="Correo" name="correo" value="<%= usuario.correo %>">
        </div>
        <input type="hidden" name="id" value="<%=usuario.id%>">
        <button type="submit" class="btn btn-success">Editar Usuario</button>
        <br>
      </form>
    </div>
    <div class="col-sm-4">

      <h3 class="text-center"> <%=usuario.apellidos%></h3>
        <h4 class="text-center"> <%=usuario.nombres%></h4>
        <p class="text-center">
          <%= usuario.correo == '' ? 'Sin correo' : usuario.correo%>
        </p>
    </div>
  </div>


</div>
